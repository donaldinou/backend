{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets '@VitelogeAdminBundle/Resources/public/scss/default.scss' filter='scss' output='bundles/vitelogeadmin/css/compiled.css' %}
  <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
{% endstylesheets %}
{% endblock %}


{% block javascripts %}
  {{ parent() }}
  <script type='text/javascript' src='http://www.google.com/jsapi'></script>
  {% javascripts '@VitelogeAdminBundle/Resources/public/js/viteloge.coffee' filter='coffee' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
  <script type='text/javascript'>
    var viteloge_ajax_loader = "{{ asset('bundles/vitelogeadmin/images/ajax-loader.gif') }}";
  </script>
{% endblock %}

{% block footer %}
{% endblock %}


{% block sonata_page_content %}
  {% if _title is not empty %}
    <div class="page-header">
      <h1>{{ _title|raw }}</h1>
    </div>
  {% endif %}
  {{ parent() }}
{% endblock %}
