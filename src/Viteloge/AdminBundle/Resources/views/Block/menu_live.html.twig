{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
{% if is_granted('ROLE_CONTROL') %}
<table class="table sonata-bc table-bordered table-striped sonata-ba-list">
  <thead>
    <tr>
      <th colspan="2">{% trans %}treatment.controls{% endtrans %}</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{% trans %}treatment.title{% endtrans %}</td>
      <td><a class="btn btn-small" href="{{ path('viteloge_admin_traitement_exclus') }}"><i class="icon-fire"></i> {% trans %}treatment.controls{% endtrans %}</a></td>
    </tr>
  </tbody>
</table>     
{% endif %}
<table class="table sonata-bc table-bordered table-striped sonata-ba-list">
  <thead>
    <tr>
      <th colspan="2">{% trans %}misc.title{% endtrans %}</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{% trans %}misc.password{% endtrans %}</td>
      <td><a class="btn btn-small" href="{{ path('fos_user_change_password') }}">{% trans %}misc.change{% endtrans %}</a></td>
    </tr>
  </tbody>
</table>     
{% endblock %}
